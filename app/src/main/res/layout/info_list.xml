<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayoutInfo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="18dp"
    tools:context=".ui.home.HomeFragment">

    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/Image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/thermostat_icon" />

        <TextView
            android:id="@+id/infoOfTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/Image"
            android:text="Temperature"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/level_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingLeft="14dp"
            android:text="Level "
            android:textSize="22sp">

        </TextView>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/expandable_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/detailsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="14dp"
            android:text="Ideal Level:"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/detailsDescriptionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detailsTextView"
            android:paddingLeft="14dp"
            android:text="Details about temperature"
            android:textSize="15sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detailsDescriptionTextView"
            android:layout_alignEnd="@id/detailsDescriptionTextView"
            android:onClick="bookingButtonBarberList"
            android:text="See more details"
            tools:ignore="OnClick" />

    </RelativeLayout>
</LinearLayout>