<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/linearLayoutInfo"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
android:paddingTop="18dp"
tools:context=".ui.fragment.HomeFragment">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/Image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/thermostat_icon" />

    <TextView
        android:id="@+id/infoOfTemperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/Image"
        android:text="Temperature"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/temperatureLevel_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingLeft="14dp"
        android:text="Level "
        android:textSize="22sp">
    </TextView>


</RelativeLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tmpDetailsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="14dp"
        android:text="Ideal Level:"
        android:textSize="17sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tmpDetailsDescriptionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tmpDetailsTextView"
        android:paddingLeft="14dp"
        android:text="Details about temperature"
        android:textSize="15sp" />

    <Button
        android:id="@+id/detailsTemperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tmpDetailsDescriptionTextView"
        android:layout_alignEnd="@id/tmpDetailsDescriptionTextView"
        android:layout_marginRight="5dp"
        android:text="See more details"
        tools:ignore="OnClick" />

    <Switch
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:text="Automation"
        android:id="@+id/tmpAutomationSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        tools:layout_editor_absoluteX="153dp"
        tools:layout_editor_absoluteY="72dp"
        android:layout_below="@+id/tmpDetailsDescriptionTextView"/>

</RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/Image2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/humidity_icon" />

        <TextView
            android:id="@+id/infoOfHumidityTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/Image2"
            android:text="Humidity"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/humidityLevel_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingLeft="14dp"
            android:text="Level "
            android:textSize="22sp">

        </TextView>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/humidityDetailsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="14dp"
            android:text="Ideal Level:"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/humidityDetailsDescriptionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/humidityDetailsTextView"
            android:paddingLeft="14dp"
            android:text="Details about temperature"
            android:textSize="15sp" />

        <Button
            android:id="@+id/detailsHumidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/humidityDetailsDescriptionTextView"
            android:layout_alignEnd="@id/humidityDetailsDescriptionTextView"
            android:layout_marginRight="5dp"
            android:text="See more details"
            tools:ignore="OnClick" />
        <Switch
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:text="Automation"
            android:id="@+id/humidityAutomationSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            tools:layout_editor_absoluteX="153dp"
            tools:layout_editor_absoluteY="72dp"
            android:layout_below="@+id/humidityDetailsDescriptionTextView"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/Image1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cloud_co2_icon" />

        <TextView
            android:id="@+id/infoOfTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/Image1"
            android:text="CO2"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/co2Level_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingLeft="14dp"
            android:text="Level "
            android:textSize="22sp">

        </TextView>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/expandable_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/co2DetailsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="14dp"
            android:text="Ideal Level:"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/co2DetailsDescriptionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/co2DetailsTextView"
            android:paddingLeft="14dp"
            android:text="Details about temperature"
            android:textSize="15sp" />

        <Button
            android:id="@+id/detailsCO2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/co2DetailsDescriptionTextView"
            android:layout_alignEnd="@id/co2DetailsDescriptionTextView"
            android:text="See more details"
            android:layout_marginRight="5dp"
            tools:ignore="OnClick" />
        <Switch
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:text="Automation"
            android:id="@+id/CO2AutomationSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            tools:layout_editor_absoluteX="153dp"
            tools:layout_editor_absoluteY="72dp"
            android:layout_below="@+id/co2DetailsDescriptionTextView"/>


    </RelativeLayout>
</LinearLayout>